                        <div class="form-group">
                            <label for="add-name">Nombre</label>
                            <input type="text" id="add-name" name="name" minlength="2" maxlength="64" required>
                        </div>
                        <div class="form-group">
                            <label for="add-lastname">Apellido Paterno</label>
                            <input type="text" id="add-lastname" name="lastname" minlength="2" maxlength="64" required>
                        </div>
                        <div class="form-group">
                            <label for="add-sec_lastname">Apellido Materno</label>
                            <input type="text" id="add-sec_lastname" name="sec_lastname" minlength="2" maxlength="64" required>
                        </div>
                        <div class="form-group">
                            <label for="add-birth_date">Fecha Nac.</label>
                            <input type="date" id="add-birth_date" name="birth_date">
                        </div>
                        <div class="form-group">
                            <label for="add-email">Email</label>
                            <input type="email" id="add-email" name="email" minlength="8" maxlength="128" required>
                        </div>
                        <div class="form-group">
                            <label for="add-tax_id">RFC</label>
                            <input type="text" id="add-tax_id" name="tax_id" minlength="10" maxlength="13" required>
                        </div>
                        <div class="form-group">
