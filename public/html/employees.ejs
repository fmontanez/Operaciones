<div id="catalog-container" class="catalog-container">
    <div class="header">
        <h2>Administración de Empleados</h2>
    </div>

    <div class="filter-pane">
        <div class="filter-group">
            <label for="name-filter">Nombre</label>
            <input type="text" id="name-filter" name="name-filter">
        </div>
        <div class="filter-group">
            <label for="taxId-filter">RFC</label>
            <input type="text" id="taxId-filter" name="taxId-filter">
        </div>
        <div class="filter-group">
            <label for="govermentCode-filter">CURP</label>
            <input type="text" id="govermentCode-filter" name="govermentCode-filter">
        </div>
        <div class="filter-group">
            <label for="role-filter">Rol</label>
            <select id="role-filter" name="role-filter">
                <option value="">Todos</option>
                <% roles.forEach(function(role) { %>
                    <option value="<%= role.id %>"><%= role.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="filter-group">
            <label for="incomeType-filter">Tipo Ingresos</label>
            <select id="incomeType-filter" name="incomeType-filter">
                <option value="">Todos</option>
                <% incomeTypes.forEach(function(incomeType) { %>
                    <option value="<%= incomeType.id %>"><%= incomeType.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="filter-group">
            <label for="level-filter">Nivel</label>
            <select id="level-filter" name="level-filter">
                <option value="">Todos</option>
                <% levels.forEach(function(level) { %>
                    <option value="<%= level.id %>"><%= level.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="filter-group">
            <label for="employementRelationship-filter">Rel. Laboral</label>
            <select id="employementRelationship-filter" name="employementRelationship-filter">
                <option value="">Todos</option>
                <% employementRelationships.forEach(function(relationship) { %>
                    <option value="<%= relationship.id %>"><%= relationship.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="button-group">
            <button id="search-button" class="action-button"><img src="../img/search.svg" alt="Buscar">Buscar</button>
        </div>
    </div>

    <div id="search-results" class="hidden">
        <div id="loading-indicator" class="hidden">
            <div class="loader"></div>
            <p>Cargando resultados...</p>
        </div>
        <div id="results-header" class="results-header hidden">
            <div id="results-count-message" class="hidden"></div>
            <button id="add-button" class="action-button"><img src="../img/add.svg" alt="Agregar">Agregar</button>
        </div>
        <div class="top-scrollbar-container">
            <div class="top-scrollbar-dummy"></div>
        </div>
        <div class="employees-table-container">
            <table id="employees-table" class="catalog-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ap. Paterno</th>
                        <th>Ap. Materno</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>RFC</th>
                        <th>CURP</th>
                        <th>Rel. Laboral</th>
                        <th>Tipo Ingresos</th>
                        <th>Rol</th>
                        <th>Nivel</th>
                        <th>Jerarquía</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Rows will be inserted by JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div id="add-modal" class="modal hidden">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h2>Agregar Empleado</h2>
        <form id="add-form" novalidate>
            <div class="tab-container">
                <div class="tab-buttons">
                    <button type="button" class="tab-button active" data-tab="add-personal-info">Datos Personales</button>
                    <button type="button" class="tab-button" data-tab="add-labor-info">Datos Laborales</button>
                    <button type="button" class="tab-button" data-tab="add-income-info">Datos Financieros</button>
