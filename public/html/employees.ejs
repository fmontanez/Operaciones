                            </select>
                        </div>
                        <div class="form-group">
                            <label for="add-id_bank">ID Banorte</label>
                            <input type="text" id="add-id_bank" name="id_bank" maxlength="20" pattern="[0-9]*">
                        </div>
                        <div class="form-group">
                            <label for="add-income_type_id">Tipo Ingresos</label>
                            <select id="add-income_type_id" name="income_type_id" required>
                                <option value="">Seleccionar</option>
                                <% incomeTypes.forEach(function(incomeType) { %>
                                    <option value="<%= incomeType.id %>"><%= incomeType.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="add-imss_bw_gros_salary">Sueldo Quincenal IMSS bruto</label>
                            <input type="number" id="add-imss_bw_gros_salary" name="imss_bw_gros_salary" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="add-imss_bw_net_salary">Sueldo Quincenal IMSS neto</label>
                            <input type="number" id="add-imss_bw_net_salary" name="imss_bw_net_salary" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="add-gin_bw_net_salary">Sueldo Quincenal GIN bruto</label>
                            <input type="number" id="add-gin_bw_net_salary" name="gin_bw_net_salary" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="add-monthly_bonus">Sueldo Quincenal GIN neto</label>
                            <input type="number" id="add-monthly_bonus" name="monthly_bonus" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="add-assignation_bonus">Bono Asignación</label>
                            <input type="number" id="add-assignation_bonus" name="assignation_bonus" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="add-total_monthly_salary">Sueldo mensual neto</label>
                            <input type="number" id="add-total_monthly_salary" name="total_monthly_salary" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="add-last_rise_date">Fecha Últ. Aumento</label>
                            <input type="date" id="add-last_rise_date" name="last_rise_date" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="button-group">
                <button type="button" id="cancel-add-btn" class="cancel-button-style">Cancelar</button>
                <button type="submit" class="save-button-style">Guardar</button>
            </div>
        </form>
    </div>
</div>

