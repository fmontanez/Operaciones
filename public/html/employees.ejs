                            <input type="text" id="add-goverment_code" name="goverment_code" maxlength="18">
                        </div>
                        <div class="form-group">
                            <label for="add-id_opta">ID OPTA</label>
                            <input type="number" id="add-id_opta" name="id_opta" max="1000">
                        </div>
                    </div>
                </div>

                <div id="add-labor-info" class="tab-content">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="add-contracting_date">Fecha Contratación</label>
